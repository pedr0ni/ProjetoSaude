<div id="modal-login" uk-modal>
    <div class="uk-modal-dialog uk-modal-body">
        <h2 class="uk-modal-title">Login</h2>

        <form id="login-form">
            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="login-cpf" type="text" placeholder="CPF" name="Cpf">
                </div>
            </div>

            <div class="uk-margin">
                <div class="uk-form-controls">
                    <input class="uk-input" id="login-password" type="password" placeholder="Senha" name="Senha">
                </div>
            </div>
        </form>

        <p class="uk-text-right">
            <button class="uk-button uk-button-default" type="button" onclick="$('#login-form')[0].reset()">LIMPAR</button>
            <button class="uk-button uk-button-primary" id="login-submit" type="button" onclick="$('#login-form').submit()">ENTRAR</button>
        </p>
    </div>
</div>