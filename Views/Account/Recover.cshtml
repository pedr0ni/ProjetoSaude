
@{
    ViewData["Title"] = "Recover";
}

<h2>Recuperar Senha</h2>

<hr />

@if (ViewData["Message"] != null && ViewData["Type"] != null)
{
    <div class="alert alert-@ViewData["type"]">
        @ViewData["message"]
    </div>
}

<form asp-controller="Account" asp-action="InputRecover" method="post">
    <div class="form-group">
        <label>CPF</label>
        <input id="cpf" name="cpf" type="text" class="form-control" placeholder="Ex. 12345678912">
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <input id="email" name="email" type="email" class="form-control" placeholder="Digite seu e-mail">
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">ENVIAR</button>
    <a asp-area="" asp-controller="Account" asp-action="Login" class="pull-right">Lembrou a senha? Fazer Login</a>
</form>
