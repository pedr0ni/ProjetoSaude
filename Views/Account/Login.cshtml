@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<hr />

@Html.Partial("Alert")

<form asp-controller="Account" asp-action="InputLogin" method="post">
    <div class="form-group">
        <label>CPF</label>
        <input id="cpf" name="cpf" type="text" class="form-control" placeholder="Ex. 12345678912" required>
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input id="senha" name="senha" type="password" class="form-control" placeholder="Digite sua senha" required>
    </div>
    <input name="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" hidden />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">ENTRAR</button>
    <button type="reset" class="btn btn-danger">LIMPAR</button>
    <a asp-area="" asp-controller="Account" asp-action="Recover" class="pull-right">Esqueci minha senha</a>
</form>